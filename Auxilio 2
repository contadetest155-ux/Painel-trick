<body><div class="container">
    <h1>auxilio head</h1>
    <button id="btnAimlock">aimlock</button>
    <button id="btnInjetar">injetar</button>
</div><script>
// =============================================
// BOTÃO AIMLOCK - SALVA O CÓDIGO NO base.txt
// =============================================
document.getElementById("btnAimlock").addEventListener("click", function () {
    alert("AIMLOCK ativado!");

    const codigoAim = "AIMLOCK_ATIVADO";
    const pasta = cordova.file.dataDirectory;

    window.resolveLocalFileSystemURL(pasta, function (dir) {
        dir.getFile("base.txt", { create: true }, function (fileEntry) {
            fileEntry.createWriter(function (writer) {
                writer.write(codigoAim);
                console.log("base.txt atualizado com código AIMLOCK");
            });
        });
    });
});

// =============================================
// BOTÃO INJETAR - LÊ base.txt → ESCREVE em injecao.txt
// =============================================
document.getElementById("btnInjetar").addEventListener("click", function () {
    injetarCodigo();
});

function injetarCodigo() {
    const pasta = cordova.file.dataDirectory;

    window.resolveLocalFileSystemURL(pasta + "base.txt", function (fileEntry) {
        fileEntry.file(function (file) {
            const reader = new FileReader();

            reader.onloadend = function () {
                const conteudoBase = this.result + "\n";

                window.resolveLocalFileSystemURL(pasta + "injecao.txt", function (destEntry) {
                    destEntry.createWriter(function (writer) {
                        writer.seek(writer.length);
                        writer.write(conteudoBase);
                        alert("Código injetado com sucesso!");
                    });
                }, function () {
                    criaArquivoDestino(conteudoBase);
                });
            };

            reader.readAsText(file);
        });
    }, function () {
        alert("O arquivo base.txt não existe! Ative o AIMLOCK primeiro.");
    });
}

function criaArquivoDestino(conteudo) {
    const pasta = cordova.file.dataDirectory;

    window.resolveLocalFileSystemURL(pasta, function (dir) {
        dir.getFile("injecao.txt", { create: true }, function (fileEntry) {
            fileEntry.createWriter(function (writer) {
                writer.write(conteudo);
                alert("injecao.txt criado e preenchido!");
            });
        });
    });
}

</script></body>
</html>
